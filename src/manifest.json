{
	"manifest_version": 2,

	"name": "Typographie",
	"version": "1.0",
	"description": "Use right click to process any text in Typographie.",
	"icons": {
	    "16": "16x16.png",
	    "32": "32x32.png",
	    "48": "48x48.png",
	    "128": "128x128.png"
	},

	"background_page" : "background.html",
	"permissions": [ "tabs", "contextMenus" ],
	"content_scripts": [
		{
			"all_frames": true,
			"matches": [ "*://*/*" ],
			"js": [ "typoscript.js" ]
		}
	]
}
