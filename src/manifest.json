{
	"manifest_version": 2,

	"name": "Typographie",
	"version": "1.0",
	"description": "Use right click to process any text in Typographie.",
	"icons": {
	    "16": "icons/16x16.png",
	    "32": "icons/32x32.png",
	    "48": "icons/48x48.png",
	    "128": "icons/128x128.png"
	},

	"background": {
		"scripts": ["background.js"]
	},
	"permissions": [
		"tabs",
		"contextMenus",
		"http://*/*",
		"https://*/*"
	],
	"content_scripts": [
		{
			"all_frames": true,
			"matches": [ "*://*/*" ],
			"js": [ "typoscript.js" ]
		}
	]
}
